
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no">
    <title>
        欢迎登录礼服管理系统
    </title>
    @Styles.Render("~/content/css")
    <style>
        #app {
            display: flex;
            height: 100vh;
            background-image: url('../../Images/bg.png');
            background-size: cover;
        }

            #app > div {
                flex: 1;
            }

        .flex-box {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .flex-box.left {
                align-items: flex-start;
                margin-left: 50px;
            }

            .flex-box.right {
                align-items: flex-end;
                margin-right: 50px;
            }

        .login-container {
            width: 410px;
            text-align: center;
            padding: 46px;
            background-color: #fff;
            border-radius: 11px;
            box-shadow: 0 2px 12px 0 rgb(0 0 0 / 10%);
        }

            .login-container > div {
                margin-bottom: 36px;
            }

            .login-container .title {
                font-weight: bold;
                color: #C20C0C;
                font-size: 30px;
            }




            .login-container .input {
                background-color: #f2f2f2;
                border-radius: 999px;
                display: flex;
                align-items: center;
                padding: 12px 16px;
                padding-left: 50px;
                position: relative;
                flex: 1;
            }

                .login-container .input.code {
                    padding-right: 126px;
                }

                    .login-container .input.code span {
                        font-size: 14px;
                        position: absolute;
                        right: 16px;
                        color: #C20C0C;
                        cursor: pointer;
                    }

                .login-container .input > img {
                    height: 24px;
                    position: absolute;
                    left: 16px;
                }

            .login-container button {
                background-color: #C20C0C;
                border: none;
                width: 100%;
                height: 46px;
                border-radius: 999px;
                color: #fff;
                outline: none;
                cursor: pointer;
            }

            .login-container .row {
                position: relative;
            }

                .login-container .row .error {
                    position: absolute;
                    left: 50px;
                    bottom: -20px;
                    font-size: 14px;
                    color: white;
                }

        input {
            height: 28px;
            width: 100%;
            font-size: 20px;
            border: none;
            background-color: #f2f2f2;
            outline: none;
        }

        .header {
            position: absolute;
            top: 118px;
            font-size: 34px;
            font-weight: bold;
        }

        .box-bind {
            color: #C20C0C;
            margin-top: 10px;
            cursor: pointer;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div id="app" v-cloak>
        <div class="flex-box left" style="margin-left: 30%;">


            <div class="login-container">
                <div class="header">
                    欢迎登录礼服管理系统
                </div>
                <div class="title">欢迎登录</div>
                <div class="row">
                    <div class="input">
                        <img src="~/images/user.png" />
                        <input placeholder="手机号"
                               v-model="phone"
                               @@input="phoneInput" />
                    </div>
                    <span class="error" v-show="errors['phone']">请输入正确的手机号</span>
                </div>
                <div class="row">
                    <div class="input code">
                        <img src="~/Images/lock.png" />
                        <input placeholder="验证码"
                               v-model="code"
                               @@input="codeInput" />
                        <span v-show="countdown===0" @@click="sendCode">获取微信验证码</span>
                        <span v-show="countdown>0">{{countdown}}秒后重试</span>
                    </div>
                    <span class="error" v-show="errors['code']">请输入正确的验证码</span>
                </div>
                <button @@click="submit">
                    登录
                </button>

                <div class="box-bind" @@click="ShowDialogCode=true">若未绑定微信，前往扫码绑定微信登录>></div>
            </div>
        </div>
        <el-dialog title="员工微信绑定"
                   :visible.sync="ShowDialogCode"
                   width="400px"
                   center>
            <div style="display:flex;justify-content:center">
                <el-image style="width: 300px; height: 300px"
                          :src="codeUrl"
                          fit="fill"></el-image>
            </div>
        </el-dialog>
    </div>

    @Scripts.Render("~/bundles/vue")
    <script>
        new Vue({
            el: "#app",
            data: {
                value: "",
                active: 0,
                ShowDialogCode: false,
                loading: false,
                activeStatus: 0,
                codeUrl: '',
                finished: false,
                error: false,
                refreshing: false,
                countdown: 0,
                errors: {
                    phone: false,
                    code: false
                },
                phone: "",
                code: "",
            },
            methods: {
                load() {
                    this.loading = true;
                },
                phoneInput() {
                    if (this.phone == undefined || this.phone == '' || !(/^1[3456789]\d{9}$/.test(this.phone))) {
                        this.errors['phone'] = true;
                    } else {
                        this.errors['phone'] = false;
                    }
                },
                codeInput() {
                    if (this.code == undefined || this.code == '') {
                        this.errors['code'] = true;
                    } else {
                        this.errors['code'] = false;
                    }
                },
                sendCode() {
                    this.phoneInput();
                    if (this.errors['phone']) {
                        return;
                    }

                    this.countdown = 60;
                    let interval = window.setInterval(() => {
                        if (this.countdown > 0) {
                            this.countdown--;
                        } else {
                            clearInterval(interval)
                        }
                    }, 1000)

                    axios.post('/Home/SendLoginCode', {
                        phone: this.phone
                    }).then(res => {
                        if (res.data.ResultCode === 0) {
                        } else if (res.data.ResultCode === 100005) {
                            alert('用户不存在');
                        } else if (res.data.ResultCode === 100010) {
                            alert('未绑定微信');
                        } else {
                            alert('登录失败');
                        }
                    }).catch(() => {
                        alert('登录失败');
                    })
                },
                submit() {
                    this.codeInput() & this.phoneInput();
                    for (let i in this.errors) {
                        if (this.errors[i]) {
                            return;
                        }
                    }

                    axios.post('/Home/UserLogin', {
                        phone: this.phone,
                        code: this.code
                    }).then(res => {
                        if (res.data.ResultCode === 0) {
                            window.location.href = '/Home/Index';
                        } else if (res.data.ResultCode === 100020) {
                            alert('验证码错误');
                        } else {
                            alert('登录错误')
                        }
                    })
                },
                getCodeUrl() {
                    axios.get('/Home/GenerateQRCode', {
                        params: {
                        }
                    }).then(res => {
                        this.codeUrl = 'data:image/png;base64,' + res.data.data;
                    })
                }
            },
            mounted() {
                this.load();
                this.getCodeUrl();
            }
        })
    </script>
</body>
</html>
